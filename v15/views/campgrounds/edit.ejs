<%- include("../partials/header")-%>

<link rel = "stylesheet" href = "/stylesheets/editcampground.css">

<div id = "main-div" class="card text-center">
      <div class="card-body">
          <h1 id = "edit" class="card-title">Edit <%= campground.name %></i></h1>
          <p class="card-text">
              <form action = "/campgrounds/<%= campground._id%>?_method=PUT" method ="POST" enctype = "multipart/form-data">
                   <div class="input-group mb-3 myclass">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-campground"></i></span>
                      </div>
                      <input type="text" class="form-control" value = "<%= campground.name %>" aria-label="Username" aria-describedby="basic-addon1" name = "name" required>
                    </div>
                    <div class="input-group mb-3 myclass">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-camera-retro"></i></span>
                      </div>
                      <input type="file" id="image" name="image" accept="image/*"  required>
                    </div>
                    <div class="input-group mb-3 myclass">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-wallet"></i></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Amount (to the nearest rupee)" value = "<%= campground.price %>" name = "price">
                        <div class="input-group-append">
                          <span class="input-group-text">.00</span>
                        </div>
                      </div>

                      <div class="input-group myclass">
                        <div class="input-group-prepend">
                          <span class="input-group-text">Description</span>
                        </div>
                        <textarea class="form-control" aria-label="With textarea" name = "Description" value  = "<%= campground.Description %>" ></textarea>
                      </div>
                    <div id = "update" class="form-group form-check">
                        <button id ="create" type="submit" class="btn btn-primary">Update <i id = "createSymbol" class = "fas fa-edit"></i></button>
                    </div>
              </form>
          </p>
      </div>
  </div>

<%- include("../partials/footer")-%>