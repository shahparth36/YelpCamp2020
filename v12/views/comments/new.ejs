<%- include("../partials/header")-%>

<div class = "container" style = "margin-left: 30%">
	<h1>Add a new Comment to <%= campground.name %></h1>
	<div class = "container">
	<form action = "/campgrounds/<%=campground._id %>/comments" method ="POST">
<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= campground.author.username%>">
    </div>
</div>
<div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Comment</label>
    <div class="col-sm-10">
      <input type="text" style = "width: 50%" class="form-control" placeholder = "Enter Comment" id="exampleInputEmail1" aria-describedby="emailHelp" name = "comment[text]">
    </div>
  </div>
  <button type="submit" class="btn btn-primary" style = "margin-right:20px;">Submit</button>
  <a class = "btn btn-success" href = "/campgrounds">Go Back</a>
</form>
