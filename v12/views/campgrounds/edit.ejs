<%- include("../partials/header")-%>

<div class = "container" style = "margin-left: 30%">
	<h1>Edit <%= campground.name %></h1>
	<div class = "container">
	<form action = "/campgrounds/<%= campground._id%>?_method=PUT" method ="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Campground Name</label>
    <input type="text" style = "width: 50%" class="form-control" value = "<%= campground.name %>" id="exampleInputEmail1" aria-describedby="emailHelp" name = "campground[name]">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Image URL</label>
	  <input type="text" style = "width: 50%" value = "<%= campground.image %>" name = "campground[image]" class="form-control" id="exampleInputPassword1">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Rate</label>
    <input type="text" style = "width: 50%" class="form-control" value = "<%= campground.price %>" id="exampleInputEmail1" aria-describedby="emailHelp" name = "campground[price]">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Description</label>
    <input type="text" style = "width: 50%" class="form-control" value = "<%= campground.Description %>" id="exampleInputEmail1" aria-describedby="emailHelp" name = "campground[Description]">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>	
	<a href = "/campgrounds">Go Back</a>

<%- include("../partials/footer")-%>
	</div>
</div>