<%- include("../partials/header")-%>

<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <p class = "lead" style = "margin-top: 20px;">YelpCamp</p>
            <div class = "list-group">
                <li class = "list-group-item active">Info 1</li>
                <li class = "list-group-item">Info 2</li>
                <li class = "list-group-item">Info 3</li>
            </div>
        </div>
        <div class = "col-md-9">
          <div class="card" style="width: 50rem; margin-top: 20px;">
                <img class="card-img-top" src ="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><a href="#"><%= campground.name %></a><span style = "float: right">$9.00/Night</span></h5>
                    <div class="card-text">
                        <p><%= campground.Description %></p>
                    </div>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            
                   
                
            <div class="card text-white bg-dark mb-3" style="max-width: 50rem; margin-top: 10px;">
                <div class="card-header">REVIEWS</div>
                <div class="card-body">
                    <h5 class="card-title"> <a class = "btn btn-success" href = "/campgrounds/<%= campground._id %>/comments/new">Add Comment</a></h5>
                    <hr>
                    <% campground.comments.forEach(function(comment) {  %>     
                    <div class = "row">
                        <div class = "col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span style = "float: right;">10 days ago</span>
                            <p><%= comment.text %></p></p>
                            
                        </div>
                    </div>
                    <%  }); %>
                </div>
            </div>
    
    
    
    
        </div>
        
        
    
    
    
    <%- include("../partials/footer")-%>
        </div>
    </div>
    
</div>